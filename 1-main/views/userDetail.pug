extends layouts/main

block content
    .user-profile
        .user-profile__header
            img.u-avatar(src=user.avatarUrl, alt="")
            h4.profile__username=user.username 
            h4.profile__username=user.email 
        if user.id === loggedUser.id
            .user-profile__btns
                a(href=`/users${routes.editProfile}`)
                    button 
                        //- i.far.fa-edit 
                        |Edit Profile
                a(href=`/users${routes.changePassword}`)
                    button 
                        //- i.fas.fa-lock
                        |Change Password
